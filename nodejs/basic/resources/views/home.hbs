<style>
  .row {
    max-width: 1200px;
    display: flex;
    flex-wrap: wrap;
  }

  .col {
    flex: 0 0 33.33333%;
    max-width: 33.33333%;
    margin-top: 6px;
  }
</style>

<div class="mt4">
  <div class="row">
    {{#each courses}}
    <div class="col card" style="width: 1.8rem">
      <a href="courses/{{this.slug}}">
        <img src="{{this.image}}" class="card-img-top" alt="...">
      </a>
      <div class="card-body">
        <a href="courses/{{this.slug}}">
          <h5 class="card-title">test{{this.name}}</h5>
        </a>
        <a href="#" class="btn btn-primary">Buy course</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
